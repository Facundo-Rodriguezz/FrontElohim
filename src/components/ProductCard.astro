---
interface Props {
	name: string;
	price: number;
	description: string;
	image: string;
}

const { name, price, description, image } = Astro.props;
---

<div class="product-card">
	<img src={image} alt={name} />
	<div class="product-info">
		<h3>{name}</h3>
		<p class="price">${price}</p>
		<p class="description">{description}</p>
		<button>Agregar al pedido</button>&nbsp;&nbsp;
		<button>Detalles del producto</button>
	</div>
</div>

<style>
	.product-card {
		background: white;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}
	.product-card:hover {
		transform: translateY(-5px);
	}
	.product-card img {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	.product-info {
		padding: 1rem;
	}
	.product-info h3 {
		color: var(--burgundy);
		margin-bottom: 0.5rem;
	}
	.price {
		font-size: 1.25rem;
		font-weight: bold;
		color: var(--burgundy);
		margin-bottom: 0.5rem;
	}
	.description {
		color: #666;
		margin-bottom: 1rem;
	}
	button {
		background-color: var(--burgundy);
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 4px;
		cursor: pointer;
		width: 100%;
	}
	button:hover {
		background-color: var(--burgundy-light);
	}
</style>
